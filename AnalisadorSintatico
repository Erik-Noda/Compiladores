package AnalisadorLexico;

import java.util.ArrayList;

public class AnalisadorSintatico {
    TipoToken lookahead;
    ArrayList<Token>lista;
    int indice = 0;
    Token tokenFinal = new Token("$",TipoToken.TokenFinal,-1);
    
    public AnalisadorSintatico(ArrayList<Token>lista) {
        this.lista = lista;
        this.lookahead = lista.get(indice).padrao;
    }
    
    public void match(TipoToken t){
        if(lookahead==t){
            System.out.println(lista.get(indice).linha+ " " +lookahead + "çççç");
            indice++;
            lookahead = lista.get(indice).padrao;
            //System.out.println(lookahead);
        }else{
            System.out.println("#Erro na linha " + lista.get(indice).linha + ", devido a incoerencia com o tipoToken "+ lista.get(indice).padrao);
            System.exit(0);
        }
    }
    
    public void P(){
        
        
        if(lookahead== TipoToken.IniDelim){
            match(TipoToken.IniDelim);
            match(TipoToken.PCDec);
            
            match(TipoToken.FimDelim);
            LD();
            match(TipoToken.IniDelim);
            match(TipoToken.PCProg);
            match(TipoToken.FimDelim);
            LC();
            cifrao();
        }
        
    }
    public void cifrao(){
        if(lookahead==TipoToken.TokenFinal){
            System.out.println("SUCESSO");
        }
    }
    
    public void LD(){
        
        D();
        DLinha();
    }
    
    public void D(){
        match(TipoToken.Var);
        match(TipoToken.IniDelim);
        TV();
        match(TipoToken.FimDelim);
    }
    
    public void DLinha(){
        if(lookahead == TipoToken.Var){
            LD();
        }
    }
    
    public void TV(){
        if(lookahead==TipoToken.PCInt){
            match(TipoToken.PCInt);
        }
        if(lookahead==TipoToken.PCReal){
            match(TipoToken.PCReal);
        }    
    }
    
    public void EA(){
        TA();
        EALinha();
    }
    
    public void EALinha(){
        if(lookahead==TipoToken.OpAritSoma){
            match(TipoToken.OpAritSoma);
            TA();
            EALinha();
        }
        if(lookahead==TipoToken.OpAritSub){
            match(TipoToken.OpAritSub);
            TA();
            EALinha();
        }
    }
    
    public void TA(){
        
        FA();
        TALinha();
    }
    
    public void TALinha(){
        if(lookahead==TipoToken.OpAritMult){
            match(TipoToken.OpAritMult);
            FA();
            TALinha();
        }
        if(lookahead==TipoToken.OpAritDiv){
            match(TipoToken.OpAritDiv);
            FA();
            TALinha();
        }
    }
    
    public void FA(){
        if(lookahead==TipoToken.NumInt) {
            match(TipoToken.NumInt);
        }
        if(lookahead==TipoToken.NumReal) {
            match(TipoToken.NumReal);
        }
        if(lookahead==TipoToken.Var) {
            
            match(TipoToken.Var);
        }
        
        if(lookahead==TipoToken.AbrePar){
            match(TipoToken.AbrePar);
            EA();
            match(TipoToken.FechaPar);
            
        }
    }
    
    public void ER(){
        
        TR();
        ERLinha();
    }
    
    public void ERLinha(){
        if(lookahead==TipoToken.OpBoolE){
            OB();
            TR();
            ERLinha();
        }
        if(lookahead==TipoToken.OpBoolOu){
            OB();
            TR();
            ERLinha();
        }
    }
    
    public void TR(){
        EA();
        if(lookahead==TipoToken.OpRelIgual){
            match(TipoToken.OpRelIgual);
            EA();
        }
        
        if(lookahead==TipoToken.OpRelDif){
            match(TipoToken.OpRelDif);
            EA();
        }
        
        if(lookahead==TipoToken.OpRelMaior){
            match(TipoToken.OpRelMaior);
            EA();
        }
        
        if(lookahead==TipoToken.OpRelMaiorIgual){
            match(TipoToken.OpRelMaiorIgual);
            EA();
        }
        
        if(lookahead==TipoToken.OpRelMenor){
            match(TipoToken.OpRelMenor);
            EA();
        }
        
        if(lookahead==TipoToken.OpRelMenorIgual){
            match(TipoToken.OpRelMenorIgual);
            EA();
        }
        
        if(lookahead==TipoToken.AbrePar){
             match(TipoToken.AbrePar);
            EA();
            match(TipoToken.FechaPar);
        }
    }
    
    public void OB(){
        if(lookahead==TipoToken.OpBoolOu){
            match(TipoToken.OpBoolOu);
        }
        if(lookahead==TipoToken.OpBoolE){
            match(TipoToken.OpBoolE);
        }
    }
    
    public void LC(){
        C();
        LCLinha();
        
    }
    
    public void LCLinha(){
        
        if(lookahead==TipoToken.Var || lookahead==TipoToken.PCLer || lookahead==TipoToken.PCImprimir || lookahead==TipoToken.PCSe || lookahead==TipoToken.PCEnqto){
            LC();
        }
    }
    
    public void C(){
        
        if(lookahead==TipoToken.Var){    
            CA();
        }
        if (lookahead==TipoToken.PCLer) {
            CE();  
        }
        if (lookahead==TipoToken.PCImprimir) {
            CS();
        }
        if (lookahead==TipoToken.PCSe) {
            CC();
        }
        if (lookahead==TipoToken.PCEnqto) {
            CR();
        }
        if (lookahead==TipoToken.PCIni) {
            SA();
        }
    }
    
    public void CA(){
        match(TipoToken.Var);
        match(TipoToken.Atrib);
        EA();
    }
    public void CE(){
        match(TipoToken.PCLer);
        match(TipoToken.Var);
    }
    public void CS(){
        match(TipoToken.PCImprimir);
        CSLinha();
        
    }
    
    public void CSLinha(){
        if(lookahead == TipoToken.Var){
            match(TipoToken.Var);
            
        }
        if(lookahead == TipoToken.Cadeia){
            match(TipoToken.Cadeia);
            
        }
        
    }
    
    public void CC(){
        
        match(TipoToken.PCSe);
        
        ER();
        match(TipoToken.PCEntao);
        C();
        CCLinha();
               
    }
    public void CCLinha(){
        if(lookahead == TipoToken.PCSe){
            match(TipoToken.PCSe);
            C();    
        }
    }
    public void CR(){
        
        match(TipoToken.PCEnqto);
        ER();
        match(TipoToken.PCEntao);
        C();
    }
    public void SA(){
        match(TipoToken.PCIni);
        LC();
        match(TipoToken.PCFim);
    }
    
}
